
G_u = graph.to_undirected()
nodes_gdf = ox.graph_to_gdfs(G_u, edges=False)
degrees = dict(G_u.degree()) #Â filters

dead_nodes = nodes_gdf[
    (nodes_gdf.index.map(lambda n: degrees.get(n, 0) == 1)) &
    (nodes_gdf.geometry.distance(center) <= radius)
] # ensures only dead-ends within raidus are plotted

